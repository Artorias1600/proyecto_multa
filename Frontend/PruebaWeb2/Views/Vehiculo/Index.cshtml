@model List<Vehiculo>
@{
    ViewData["Title"] = "CRUD Vehiculo";
}
<br />
<br />
<section class="content">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card card-warning card-outline">
                    <div class="card-header">
                        <h3 class="">
                            CRUD Vehiculo
                        </h3>
                    </div>
                    <!-- /.card-header -->
                    <br />
                    <br />
                    <div class="row">
                        <div class="col-md-2 ml-3" style="text-align: left">
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#AgregarModal">
                                Agregar
                            </button>
                        </div>

                    </div>
                    <div class="card-body">
                        <table id="VehiculoTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>VehiculoID</th>
                                    <th>Tipo</th>
                                    <th>Marca</th>
                                    <th>Modelo</th>
                                    <th>Placa</th>
                                    <th>Eliminar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var vehiculo in Model)
                                {
                                    <tr>
                                        <td>@vehiculo.VehiculoID</td>
                                        <td>@vehiculo.Tipo</td>
                                        <td>@vehiculo.Marca</td>
                                        <td>@vehiculo.Modelo</td>
                                        <td>@vehiculo.Placa</td>
                                        <td>
                                            <button type="button" class="btn btn-danger" onclick="eliminarvehiculo(@vehiculo.VehiculoID)">
                                                ELIMINAR
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

